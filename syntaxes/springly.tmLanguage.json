{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Springly",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#identifiers"
		}
	],
	"repository": {
		"numbers": {
			"patterns": [
				{
					"name": "numbers",
					"match": "(\\d{1,15})"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.number-sign",
					"begin": "(\\#)",
					"end": "(\\n$)"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.springly",
					"match": "\\b(use|test case|open|close|navigate|click|double|right|to|on|in|browser|wait|for|expect|expects|type|resize|maximize|minimize|until|appears|disappears|check|from|select|equals|equal|contains|not|greater|smaller|than|or|scroll|be|,|second|seconds|minute|minutes|hour|hours|number|of|1st|2nd|3rd|\\d{1,10}th)\\b"
				}
			]
		},
		"identifiers": {
			"name": "string.quoted.double.springly",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.double.springly",
					"match": "\\\\."
				}
			]
		},
		"strings": {
			"name": "string.quoted.single.springly",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.springly",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.spr"
}